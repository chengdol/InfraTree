# -*- mode: ruby -*-
# vi: set ft=ruby :

# now support centOS 6.6 to 7.7
IMAGE_NAME = "generic/centos7"
IMAGE_VERSION = "3.0.10"

# Vagrantfile for centOS 
Vagrant.configure("2") do |config|
  config.vm.box = IMAGE_NAME
  config.vm.box_version = IMAGE_VERSION
  config.vm.provision :shell, path: "provision.sh", privileged: false

  # virtualbox configuration
  config.vm.provider "virtualbox" do |v|
    v.memory = 2048
    v.cpus = 2
  end

  # master node
  config.vm.define "master", primary: true do |v|
    v.vm.hostname = "master"
    v.vm.network "private_network", ip: "172.20.21.30"
  end
  # data nodes
  (1..1).each do |i|
    config.vm.define "data#{i}" do |v|
      v.vm.hostname = "date#{i}"
      v.vm.network "private_network", ip: "172.20.21.3#{i}"
    end
  end
end
